
package aula6;

import java.util.Scanner;

public class exer5 {
    public static void main (String [] args){
        
        int [] [] matrix = new int [2][2];
        
        Scanner sc = new Scanner (System.in);
        
        for (int i = 0; i < 2; i++){
            for (int j = 0; j < 2; j++){
                System.err.println("digite um numero ");
                matrix [i][j] = sc.nextInt();
            }
            
        }
    }
    
}
